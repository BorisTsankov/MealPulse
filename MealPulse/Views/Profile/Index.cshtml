@model MealPulse.Models.Models.User

@{
    ViewData["Title"] = "Your Profile";
}

<h1>Your Profile</h1>

<dl class="row">
    <dt class="col-sm-2">First Name</dt>
    <dd class="col-sm-10">@Model.FirstName</dd>

    <dt class="col-sm-2">Last Name</dt>
    <dd class="col-sm-10">@Model.LastName</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.email</dd>

    <dt class="col-sm-2">Age</dt>
    <dd class="col-sm-10">@Model.age</dd>

    <dt class="col-sm-2">Gender ID</dt>
    <dd class="col-sm-10">@Model.gender_id</dd>

    <dt class="col-sm-2">Height (cm)</dt>
    <dd class="col-sm-10">@Model.height_cm</dd>

    <dt class="col-sm-2">Activity Level ID</dt>
    <dd class="col-sm-10">@Model.activityLevel_id</dd>

    <dt class="col-sm-2">Metric ID</dt>
    <dd class="col-sm-10">@Model.metric_id</dd>
</dl>

<hr />

<div>
    <h4>Update Weight</h4>
    <form asp-action="UpdateWeight" asp-controller="Profile" method="post">
        <input type="hidden" name="user_id" value="@Model.user_id" />
        <div class="form-group">
            <label for="newWeight">New Weight (kg):</label>
            <input type="number" step="0.1" name="newWeight" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary">Update Weight</button>
    </form>
</div>

<div>
    <h4>Update Height</h4>
    <form asp-action="UpdateHeight" asp-controller="Profile" method="post">
        <input type="hidden" name="user_id" value="@Model.user_id" />
        <div class="form-group">
            <label for="newHeight">New Height (cm):</label>
            <input type="number" step="0.1" name="newHeight" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary">Update Height</button>
    </form>
</div>

<hr />

<div>
    <a asp-controller="Goal" asp-action="Create" class="btn btn-success">Create New Goal</a>
</div>
