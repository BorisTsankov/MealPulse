@{
    ViewData["Title"] = "Forgot Password";
}
@section Styles {
    <link rel="stylesheet" href="~/css/Auth.css" asp-append-version="true" />
}

<div class="auth-page">
    <div class="auth-card shadow-lg">
        <h1 class="mb-4">Reset Password</h1>

        <form asp-action="ForgotPassword" method="post">
            <div class="form-floating mb-3">
                <input type="email" name="email" class="form-control" id="email" placeholder="you@example.com" required />
                <label for="email">Email</label>
            </div>

            <button type="submit" class="btn btn-gradient-purple w-100">Send Reset Link</button>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success mt-3 text-center">@TempData["Success"]</div>
            }
            else if (TempData["Error"] != null)
            {
                <div class="alert alert-danger mt-3 text-center">@TempData["Error"]</div>
            }

            <p class="text-center mt-3 small">
                <a asp-action="Login">Back to Login</a>
            </p>
        </form>
    </div>
</div>
