@{
    ViewData["Title"] = "Login";
}
@section Styles {
    <link rel="stylesheet" href="~/css/Auth.css" asp-append-version="true" />
}

<div class="auth-page">
    <div class="auth-card shadow-lg">
        <h1 class="mb-4">Login</h1>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success text-center" id="successMessage">
                @TempData["SuccessMessage"]
            </div>
        }

        <form asp-action="Login" method="post">
            <div class="form-floating mb-3">
                <input type="email" name="email" class="form-control" id="email" placeholder="you@example.com" required />
                <label for="email">Email</label>
            </div>

            <div class="form-floating mb-1">
                <input type="password" name="password" class="form-control" id="password" placeholder="••••••••" required />
                <label for="password">Password</label>
            </div>

            <div class="text-end mb-3">
                <a asp-action="ForgotPassword" class="small text-decoration-none text-purple">Forgot your password?</a>
            </div>

            <button type="submit" class="btn btn-gradient-purple w-100">Log In</button>

            @if (!string.IsNullOrEmpty(ViewBag.Error))
            {
                <div class="alert alert-danger mt-3">@ViewBag.Error</div>
            }

            <p class="text-center mt-3 small">
                Don’t have an account? <a asp-action="Register">Sign up</a>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        setTimeout(() => {
            const alert = document.getElementById('successMessage');
            if (alert) {
                alert.style.transition = "opacity 0.5s ease-out";
                alert.style.opacity = "0";
                setTimeout(() => alert.remove(), 500);
            }
        }, 4000);
    </script>
}
