@model Web.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Auth.css" asp-append-version="true" />
    <style>
        .text-danger {
            color: red;
            font-size: 0.875rem;
            margin-top: 4px;
        }
    </style>
}

<div class="auth-page">
    <div class="auth-card shadow-lg">
        <h1 class="mb-4">Create Your Account</h1>
        <form asp-action="Register" method="post" novalidate>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="form-floating">
                        <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                        <label asp-for="FirstName"></label>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="form-floating">
                        <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                        <label asp-for="LastName"></label>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-1">
                <input asp-for="Password" class="form-control" placeholder="Password" />
                <label asp-for="Password"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="DateOfBirth" class="form-control" type="date"
                       max="@DateTime.Today.AddYears(-12).ToString("yyyy-MM-dd")" />
                <label asp-for="DateOfBirth"></label>
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="HeightCm" class="form-control" />
                <label asp-for="HeightCm"></label>
                <span asp-validation-for="HeightCm" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="WeightKg" class="form-control" />
                <label asp-for="WeightKg"></label>
                <span asp-validation-for="WeightKg" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <select asp-for="GenderId" asp-items="@(new SelectList(ViewBag.GenderOptions, "Value", "Text"))" class="form-control"></select>
                <label asp-for="GenderId"></label>
                <span asp-validation-for="GenderId" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <select asp-for="ActivityLevelId" asp-items="@(new SelectList(ViewBag.ActivityLevelOptions, "Value", "Text"))" class="form-control"></select>
                <label asp-for="ActivityLevelId"></label>
                <span asp-validation-for="ActivityLevelId" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <select asp-for="MetricId" asp-items="@(new SelectList(ViewBag.MetricOptions, "Value", "Text"))" class="form-control"></select>
                <label asp-for="MetricId"></label>
                <span asp-validation-for="MetricId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-gradient-purple w-100">Create Account</button>

            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger mt-3">@ViewBag.ErrorMessage</div>
            }

            <p class="text-center mt-3 small">
                Already have an account? <a asp-action="Login">Log in</a>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
