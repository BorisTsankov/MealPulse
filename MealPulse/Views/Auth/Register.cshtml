@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Register" method="post">

            <div class="form-group">
                <label for="FirstName" class="control-label">First Name</label>
                <input type="text" name="FirstName" class="form-control" />
            </div>

            <div class="form-group">
                <label for="LastName" class="control-label">Last Name</label>
                <input type="text" name="LastName" class="form-control" />
            </div>

            <div class="form-group">
                <label for="email" class="control-label">Email</label>
                <input type="email" name="email" class="form-control" />
            </div>

            <div class="form-group">
                <label for="password" class="control-label">Password</label>
                <input type="password" name="password" class="form-control" />
            </div>

            <div class="form-group">
                <label for="age" class="control-label">Age</label>
                <input type="number" name="age" class="form-control" />
            </div>

            <div class="form-group">
                <label for="height_cm" class="control-label">Height (cm)</label>
                <input type="number" step="0.1" name="height_cm" class="form-control" />
            </div>

            <div class="form-group">
                <label for="gender_id" class="control-label">Gender</label>
                <select name="gender_id" class="form-control" asp-items="@(new SelectList(ViewBag.GenderOptions, "Value", "Text"))"></select>
            </div>

            <div class="form-group">
                <label for="activityLevel_id" class="control-label">Activity Level</label>
                <select name="activityLevel_id" class="form-control" asp-items="@(new SelectList(ViewBag.ActivityLevelOptions, "Value", "Text"))"></select>
            </div>

            <div class="form-group">
                <label for="metric_id" class="control-label">Metric</label>
                <select name="metric_id" class="form-control" asp-items="@(new SelectList(ViewBag.MetricOptions, "Value", "Text"))"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                    <div class="alert alert-danger" role="alert">
                    @ViewBag.ErrorMessage
                    </div>
            }
        </form>
    </div>
</div>
